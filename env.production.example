# ===========================================
# Пример файла переменных окружения для production
# Скопируйте этот файл в .env.production и заполните значения
# ===========================================

# База данных PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hakolr_blog
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
# DB_SSL=false (false для локального Docker, true для внешних БД типа AWS RDS)

# JWT секрет (сгенерируйте случайную строку)
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# URLs
FRONTEND_URL=https://yourdomain.com
# NEXT_PUBLIC_API_URL - для браузера (используйте относительный путь)
NEXT_PUBLIC_API_URL=/api
# NEXT_PUBLIC_API_URL_INTERNAL - для SSR внутри Docker (необязательно, по умолчанию http://backend:3001/api)

# Node Environment
NODE_ENV=production

